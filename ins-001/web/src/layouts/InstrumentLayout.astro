---
/**
 * Instrument Layout - Lab Container
 * 
 * Based on COMPONENTS.md Lab Container spec
 */

interface Props {
  id: string;
  title: string;
  version?: string;
  status?: 'live' | 'calibrating';
}

const { id, title, version = '0.1', status = 'live' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="INS-001 Semantic Associations - Measure how you think" />
    <title>{title} | Phronos</title>
  </head>
  <body>
    <div class="instrument-page">
      <div class="lab-container">
        <header class="lab-header">
          <div class="lab-header-left">
            <span class="lab-id">{id}</span>
            <span class="lab-separator">Â·</span>
            <span class="lab-title">{title}</span>
          </div>
          <div class="lab-header-right">
            <span class="lab-version">v{version}</span>
            <span class={`lab-status-dot ${status}`}></span>
          </div>
        </header>
        
        <div class="lab-body">
          <slot />
        </div>
        
        <footer class="lab-footer">
          <span class="lab-meta">Estimated time: 5 min</span>
        </footer>
      </div>
    </div>
  </body>
</html>

<style>
  @import '../styles/global.css';
  @import '../styles/components.css';
  
  /* Lab Container Styles */
  .instrument-page {
    min-height: 100vh;
    background: var(--bg-deep);
    position: relative;
    padding: calc(80px + var(--space-xl)) var(--space-lg) var(--space-xl);
  }
  
  .instrument-page::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--grid-color) 1px, transparent 1px),
      linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
    background-size: var(--grid-size) var(--grid-size);
    pointer-events: none;
  }
  
  .lab-container {
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin: 0 auto;
    background: var(--card-bg);
    border: var(--border-primary);
  }
  
  .lab-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-sm) var(--space-md);
    border-bottom: var(--border-divider);
    background: rgba(242, 240, 233, 0.02);
  }
  
  .lab-header-left {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }
  
  .lab-id {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--gold);
    text-transform: uppercase;
  }
  
  .lab-separator {
    color: var(--faded);
  }
  
  .lab-title {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    color: var(--text-light);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .lab-header-right {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
  }
  
  .lab-version {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--faded);
  }
  
  .lab-status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
  }
  
  .lab-status-dot.live {
    background: var(--active);
    animation: pulse 2s infinite;
  }
  
  .lab-status-dot.calibrating {
    background: var(--gold);
    animation: pulse 3s infinite;
  }
  
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }
  
  .lab-body {
    padding: var(--space-xl);
    min-height: 400px;
  }
  
  .lab-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-sm) var(--space-md);
    border-top: var(--border-divider);
  }
  
  .lab-meta {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--faded);
  }
</style>
