---
/**
 * Instrument Layout - Full Width Container
 * 
 * Matches mockup: fixed navigation, full-width content
 */

interface Props {
  id: string;
  title: string;
  version?: string;
  status?: 'live' | 'calibrating';
}

const { id, title, version = '0.1', status = 'live' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="INS-001 Semantic Associations - Measure how you think" />
    <title>{title} | Phronos</title>
  </head>
  <body>
    <div class="instrument-page">
      <div class="instrument-container">
        <slot />
      </div>
    </div>
  </body>
</html>

<style is:global>
  /* CSS Version: 2025-01-12-fix-ui-alignment */
  @import '../styles/global.css';
  @import '../styles/components.css';
  
  /* Instrument Page Styles - Full Width Container */
  .instrument-page {
    min-height: 100vh;
    background: var(--bg-deep);
    position: relative;
    padding: calc(80px + var(--space-xl)) var(--space-lg) var(--space-xl);
  }
  
  .instrument-page::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--grid-color) 1px, transparent 1px),
      linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
    background-size: var(--grid-size) var(--grid-size);
    pointer-events: none;
  }
  
  .instrument-container {
    position: relative;
    z-index: 1;
    max-width: 900px;
    margin: 0 auto;
  }
</style>
