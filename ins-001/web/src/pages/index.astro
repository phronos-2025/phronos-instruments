---
/**
 * Instruments Landing Page
 * Based on instruments-landing-mockup.html
 */

// Explicitly set as server-rendered (not prerendered)
export const prerender = false;

import '../styles/global.css';
import '../styles/components.css';
import LandingNav from '../components/landing/LandingNav.astro';
import InstrumentCard from '../components/landing/InstrumentCard.astro';
import SectionHeader from '../components/landing/SectionHeader.astro';
import LandingFooter from '../components/landing/LandingFooter.astro';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content="The Lab - Instruments for observing cognition" />
    <title>The Lab | Phronos Instruments</title>
    <meta name="page-version" content="landing-v2.0" />
  </head>
  <body>
    <LandingNav />
    
    <main class="landing-container">
      <!-- HERO -->
      <section class="hero">
        <div class="hero-label">
          <span class="hero-label-line"></span>
          The Lab
        </div>
        <h1 class="hero-title">Instruments for observing cognition.</h1>
        <p class="hero-description">
          Empirical tools for measuring how you think. Each instrument isolates a specific 
          cognitive dimension—creativity, communication, pattern recognition—and returns 
          quantified observations without judgment.
        </p>
        <div class="hero-meta">
          <div class="hero-meta-item">
            <span class="dot"></span>
            <span>1 Instrument Live</span>
          </div>
          <div class="hero-meta-item">
            <span>3 In Development</span>
          </div>
        </div>
      </section>

      <!-- INSTRUMENTS SECTION -->
      <section class="instruments-section">
        <SectionHeader id="01" title="Available Instruments" />
        
        <div class="instruments-grid">
          <InstrumentCard
            id="INS-001"
            title="Semantic Associations"
            description="Measures divergence (semantic creativity) and convergence (communicability) through word association patterns."
            status="live"
            duration="~5 min"
            outputs="2 scores"
            href="/ins-001/"
          />
          
          <InstrumentCard
            id="INS-002"
            title="Pattern Completion"
            description="Measures inductive reasoning and abstraction through visual and symbolic pattern recognition."
            status="coming"
            duration="~8 min"
            outputs="3 scores"
          />
          
          <InstrumentCard
            id="INS-003"
            title="Temporal Estimation"
            description="Measures internal clock accuracy and time perception across varying cognitive loads."
            status="coming"
            duration="~4 min"
            outputs="2 scores"
          />
        </div>
      </section>

      <!-- HOW IT WORKS -->
      <section class="info-section">
        <SectionHeader id="02" title="How Instruments Work" />
        
        <div class="info-grid">
          <div class="info-panel">
            <div class="info-panel-number">01</div>
            <div class="info-panel-title">Isolated Measurement</div>
            <p class="info-panel-description">
              Each instrument targets a specific cognitive dimension. 
              No omnibus "IQ" claims—just precise observations.
            </p>
          </div>
          <div class="info-panel">
            <div class="info-panel-number">02</div>
            <div class="info-panel-title">Quantified Output</div>
            <p class="info-panel-description">
              Results are numerical scores with defined ranges. 
              Comparable across time and populations.
            </p>
          </div>
          <div class="info-panel">
            <div class="info-panel-number">03</div>
            <div class="info-panel-title">No Judgment</div>
            <p class="info-panel-description">
              Instruments observe—they don't evaluate. Higher or 
              lower scores indicate difference, not value.
            </p>
          </div>
        </div>
      </section>

      <div class="diamond">◈</div>

      <LandingFooter />
    </main>
  </body>
</html>

<style>
  /* Landing Page Styles */
  body {
    min-height: 100vh;
    background: var(--bg-deep);
    position: relative;
  }

  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      linear-gradient(var(--grid-color) 1px, transparent 1px),
      linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
    background-size: var(--grid-size) var(--grid-size);
    pointer-events: none;
    z-index: 0;
  }

  .landing-container {
    position: relative;
    z-index: 1;
    max-width: 1000px;
    margin: 0 auto;
    padding: 144px var(--space-lg) var(--space-xl);
    min-height: 100vh;
  }

  /* Hero Section */
  .hero {
    margin-bottom: var(--space-2xl);
  }

  .hero-label {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 2px;
    color: var(--gold);
    margin-bottom: var(--space-md);
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .hero-label-line {
    width: 24px;
    height: 1px;
    background: var(--gold);
  }

  .hero-title {
    font-family: var(--font-serif);
    font-weight: 300;
    font-size: clamp(2.5rem, 6vw, 4rem);
    letter-spacing: -0.02em;
    color: var(--text-light);
    margin-bottom: var(--space-md);
    max-width: 700px;
  }

  .hero-description {
    font-family: var(--font-body);
    font-size: 1.125rem;
    color: var(--faded);
    max-width: 600px;
    line-height: 1.7;
    margin-bottom: var(--space-lg);
  }

  .hero-meta {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--faded);
    display: flex;
    gap: var(--space-lg);
  }

  .hero-meta-item {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .hero-meta-item .dot {
    width: 6px;
    height: 6px;
    background: var(--active);
    border-radius: 50%;
  }

  /* Instruments Grid */
  .instruments-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-md);
    margin-bottom: var(--space-2xl);
  }

  /* Info Section */
  .info-section {
    margin-bottom: var(--space-2xl);
  }

  .info-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-md);
  }

  @media (max-width: 768px) {
    .info-grid {
      grid-template-columns: 1fr;
    }
    
    .instruments-grid {
      grid-template-columns: 1fr;
    }
  }

  .info-panel {
    background: transparent;
    border: 1px solid var(--faded-light);
    padding: var(--space-md);
  }

  .info-panel-number {
    font-family: var(--font-mono);
    font-size: 2rem;
    color: var(--gold);
    margin-bottom: var(--space-xs);
  }

  .info-panel-title {
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--text-light);
    margin-bottom: var(--space-xs);
  }

  .info-panel-description {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: var(--faded);
    line-height: 1.5;
  }

  /* Diamond Separator */
  .diamond {
    text-align: center;
    color: var(--gold);
    font-size: 0.875rem;
    padding: var(--space-lg) 0;
  }
</style>